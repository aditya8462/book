<html>
  <!-- Compiled and minified CSS -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
  />
  <link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
  />

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  
  <style>
    .maincontainer {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 100vw;
      background-color: #fff;
    }
    .subcontainer {
      width: 50%;
      background-color: #03228f;
      border-radius: 10px;
      padding: 10px;
    }
    .heading {
      font-size: 30px;
      text-align: center;
      font-weight: bold;
      color: #fff;
    }
  </style>
  <body style="margin: 0px">
    <div class="maincontainer">
      <div class="subcontainer">
        <div class="heading">Publication Interface</div>
        <form
          action="/publication/updatepublication"
          method="post"
        >
          <div class="row">
            <div class="input-field col s12">
              <input
                id="publicationid"
                name="publicationid"
                type="text"
                class="validate"
                style="color: #fff;"
                value="<%=data.publicationid%>"
               
                readonly
              />
              <label for="publicationid">Publication Id</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input
                id="publicationname"
                name="publicationname"
                type="text"
                value="<%=data.publicationname%>"
                class="validate"
                style="color: #fff;"
              />
              <label for="publicationname">Publication Name</label>
            </div>
          </div>

          <div class="row">
            <div class="col s6 center">
              <button
                class="btn waves-effect waves-light"
                type="submit"
                name="action"
                style="background-color:#fff;color:#007bff"
              >
                Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
            <div class="col s6 center">
              <button
                class="btn waves-effect waves-light"
                type="reset"
                name="action"
                style="background-color:#fff;color:#007bff"
              >
                Reset
                <i class="material-icons right">clear</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- Compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
